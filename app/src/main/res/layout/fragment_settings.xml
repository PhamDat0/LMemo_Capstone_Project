<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.home_activity.constant_view.SettingsFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9FA3AA"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">
        <Switch
            android:id="@+id/dailyWordIsOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Word Of The Day"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Hour"
                android:textSize="20sp"/>
            <NumberPicker
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:id="@+id/WODHourPicker"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:theme="@style/NumberPickerText"
                >
            </NumberPicker>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Minute"
                android:textSize="20sp"/>
            <NumberPicker
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:id="@+id/WODMinPicker"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:theme="@style/NumberPickerText"
                >

            </NumberPicker>
        </LinearLayout>
        <Switch
            android:id="@+id/dailyWordDisMissIsOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non-dismissable notification"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9FA3AA"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <Switch
            android:id="@+id/reminderIsOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flashcard Reminder"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:text="Hour" />
            <NumberPicker
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:id="@+id/reminderHourPicker"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:theme="@style/NumberPickerText"
                >

            </NumberPicker>
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:text="Minute" />
            <NumberPicker
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:id="@+id/reminderMinPicker"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:theme="@style/NumberPickerText"
                >

            </NumberPicker>

        </LinearLayout>
        <Switch
            android:id="@+id/reminderDisMissIsOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non-dismissable notification"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9FA3AA"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btnSaveSetting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/mainColor"
                android:text="Save"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>